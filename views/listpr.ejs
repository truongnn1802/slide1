<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include css %>
    <title>Hello, world!</title>
</head>
<body class="container">
<% include nav %>
<div class="container">
    <% for (var i = 0;i < datas.length ;i++) { %>
        <img class="img-thumbnail m-1"  src="<%= datas[i].productImageLink%>"  width="400" height="400">
        <div><%= datas[i].productName%></div>
        <div><%= datas[i].productDescription%></div>
        <div><%= datas[i].productImageLink%></div>
        <form action="/delete/<%= datas[i].id %>" enctype="application/x-www-form-urlencoded" method="post">
            <button type="submit">Delete</button>
        </form>
        <button>
            <a href="/edit/<%= datas[i].id %>">Edit</a>
        </button>
        <br>
    <% } %>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>
</html>
